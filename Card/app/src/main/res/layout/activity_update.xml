<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".AddInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="필수 정보"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/lightYellow"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원님을 나타내는 사진을 등록해주세요!"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/proPic2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/people"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />
        <Button
            android:id="@+id/btn_addPic2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="사진 추가"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/lightBlue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/business_card"
                android:contentDescription="Name" />

            <EditText
                android:id="@+id/name_input2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:hint="이름 / 닉네임"
                android:textSize="12sp"
                android:importantForAutofill="no"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/company"
                android:contentDescription="Company" />

            <EditText
                android:id="@+id/company_input2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="회사 / 부서 / 직급"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:importantForAutofill="no"
                android:inputType="text" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text="예: 파전자 마늘부 대리"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/plus"
                android:contentDescription="Company" />

            <EditText
                android:id="@+id/field_input2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="종사 분야"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="no"
                android:inputType="text" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text="해시태그로 변환되어 회원님이 검색될 수 있도록 해 드려요!"/>

        <TextView
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부가 정보"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/lightYellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cell_phone"
                android:contentDescription="Phone"/>
            <EditText
                android:id="@+id/phone_input1_2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="전화번호"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:digits="0123456789-"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/email"
                android:contentDescription="Email" />

            <EditText
                android:id="@+id/email_input2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="이메일"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/address"
                android:contentDescription="address" />

            <EditText
                android:id="@+id/address_input2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:hint="주소"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/phone_call"
                android:contentDescription="phone2" />

            <EditText
                android:id="@+id/phone_input2_2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="전화번호 2"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:digits="0123456789-"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/printer"
                android:contentDescription="printer" />

            <EditText
                android:id="@+id/printer_input2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="팩스"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:digits="0123456789-"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/update_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightBlue"
                android:textSize="12dp"
                android:text="업데이트"
                style="?android:attr/buttonBarButtonStyle" />
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightRed"
                android:text="삭제"
                android:textSize="12dp"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>