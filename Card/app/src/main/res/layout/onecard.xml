<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">


        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="15dp"
            android:background="@drawable/outline"
            android:clickable="true">


            <TextView
                android:id="@+id/card_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/card_company_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="00생명 영업부"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textStyle="bold"
                android:layout_marginTop="70dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel"
                android:textStyle="bold"
                android:layout_marginTop="90dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fax"
                android:textStyle="bold"
                android:layout_marginTop="110dp"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:text="Address"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="70dp"
                android:text="010-1234-5678"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="130dp"
                android:text="email.com"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/card_phone2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="90dp"
                android:text="051-123-5678"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_printer_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="110dp"
                android:text="051-000-1234"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="150dp"
                android:text="부산광역시 금정구 부산대학로 63번길 2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_field_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:text="#영업 #생명보험"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_inside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/people_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right|center"
                android:layout_margin="15dp"
                android:background="@drawable/people" />
            <TextView
                android:id="@+id/card_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="60dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="12dp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>